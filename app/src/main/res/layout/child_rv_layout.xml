<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="280dp"
        android:id="@+id/cv_child_item"
        app:cardCornerRadius="20dp"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/child_iv"
                android:layout_width="160dp"
                android:layout_height="180dp" />

            <TextView
                android:id="@+id/child_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/child_iv"
                android:layout_centerHorizontal="true"
                android:text="Product name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upto"
            android:textColor="#4D4E4E"
            android:id="@+id/UPTO"
            android:layout_below="@id/child_productName"
            android:layout_centerHorizontal="true"
            android:textSize="17dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/UPTO"
                android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/child_productDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="50%"
                android:textColor="#DA031C"
                android:textSize="17dp"
                android:textStyle="bold" />
                <TextView
                    android:id="@+id/off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/UPTO"
                    android:layout_centerHorizontal="true"
                    android:text="% OFF"
                    android:textColor="#DA031C"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</RelativeLayout>